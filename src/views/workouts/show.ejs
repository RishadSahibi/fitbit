<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="m-0"><%= workout.title %></h2>
  <div class="d-flex gap-2">
    <a href="/workouts/<%= workout._id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
    <form action="/workouts/<%= workout._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this workout?');">
      <button class="btn btn-outline-danger btn-sm">Delete</button>
    </form>
  </div>
</div>

<p class="text-muted"><strong>Date:</strong> <%= new Date(workout.date).toLocaleDateString() %></p>

<h5>Exercises</h5>
<table class="table table-striped table-sm">
  <thead>
    <tr><th>Name</th><th>Sets</th><th>Reps</th><th>Weight</th></tr>
  </thead>
  <tbody>
    <% (workout.exercises || []).forEach(ex => { %>
      <tr>
        <td><%= ex.name %></td>
        <td><%= ex.sets %></td>
        <td><%= ex.reps %></td>
        <td><%= ex.weight %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

<% if (workout.notes) { %>
  <h5>Notes</h5>
  <p><%= workout.notes %></p>
<% } %>

<a href="/workouts" class="btn btn-outline-primary">Back to list</a>

<%- include('../partials/footer') %>
