<%- include('../partials/header') %>

<h2 class="mb-3">Edit Workout</h2>

<form action="/workouts/<%= workout._id %>?_method=PUT" method="POST" class="needs-validation" novalidate>
  <div class="row g-3">
    <div class="col-md-6">
      <label class="form-label">Title</label>
      <input name="title" class="form-control" required value="<%= workout.title %>">
      <div class="invalid-feedback">Title is required</div>
    </div>
    <div class="col-md-6">
      <label class="form-label">Date</label>
      <input name="date" type="date" class="form-control" value="<%= new Date(workout.date).toISOString().slice(0,10) %>">
    </div>
  </div>

  <div class="mt-3">
    <label class="form-label">Notes</label>
    <textarea name="notes" class="form-control" rows="3"><%= workout.notes || '' %></textarea>
  </div>

  <hr class="my-4">

  <h5>Exercises</h5>
  <div id="exercises">
    <% (workout.exercises && workout.exercises.length ? workout.exercises : [{name:'',sets:'',reps:'',weight:''}]).forEach(function(ex) { %>
      <div class="row g-2 mb-2 ex-row">
        <div class="col-md-5"><input name="ex-name" class="form-control" required placeholder="Exercise name" value="<%= ex.name %>"></div>
        <div class="col-md-2"><input name="ex-sets" class="form-control" type="number" min="1" required value="<%= ex.sets %>"></div>
        <div class="col-md-2"><input name="ex-reps" class="form-control" type="number" min="1" required value="<%= ex.reps %>"></div>
        <div class="col-md-2"><input name="ex-weight" class="form-control" type="number" min="0" value="<%= ex.weight %>"></div>
        <div class="col-md-1 d-grid"><button type="button" class="btn btn-danger remove-ex">-</button></div>
      </div>
    <% }) %>
  </div>

  <button type="button" id="add-ex" class="btn btn-sm btn-outline-primary mb-3"><i class="bi bi-plus-lg"></i> Add Exercise</button>

  <div>
    <button class="btn btn-primary">Update Workout</button>
    <a href="/workouts/<%= workout._id %>" class="btn btn-outline-secondary">Cancel</a>
  </div>
</form>

<script>
(() => {
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', e => {
      if (!form.checkValidity()) { e.preventDefault(); e.stopPropagation(); }
      form.classList.add('was-validated');
    }, false);
  });
})();
document.getElementById('add-ex').addEventListener('click', function() {
  const container = document.getElementById('exercises');
  const row = container.querySelector('.ex-row').cloneNode(true);
  row.querySelectorAll('input').forEach(i => i.value = '');
  container.appendChild(row);
});
document.addEventListener('click', (e) => {
  if (e.target.classList.contains('remove-ex')) {
    const rows = document.querySelectorAll('.ex-row');
    if (rows.length > 1) e.target.closest('.ex-row').remove();
  }
});
</script>

<%- include('../partials/footer') %>

